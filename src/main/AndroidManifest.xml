<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.marcmeszaros.papyrus">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:name="Papyrus">

        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/Settings_title" />

        <activity
            android:name=".activities.BookDetailsActivity"
            android:label="@string/BookDetails_title" />

        <activity
            android:name=".activities.TabBrowserActivity"
            android:theme="@android:style/Theme.NoTitleBar" />

        <activity
            android:name=".activities.BooksBrowserActivity"
            android:label="@string/BooksBrowser_title" />

        <activity
            android:name=".activities.LibrariesBrowserActivity"
            android:label="@string/LibrariesBrowser_title" />

        <activity
            android:name=".activities.LoanDetailsActivity"
            android:label="@string/LoanDetails_title" />

        <activity
            android:name=".activities.LoansBrowserActivity"
            android:label="@string/LoansBrowser_title" />

        <activity
            android:name=".activities.AddBookActivity"
            android:label="@string/AddBook_title" />

        <activity
            android:name=".activities.AddLibraryActivity"
            android:label="@string/AddLibrary_title" />

        <!-- Activity Aliases -->
        <activity-alias
            android:name=".activities.MainActivity"
            android:targetActivity=".activities.TabBrowserActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <!-- Content Providers -->
        <provider
            android:name=".provider.PapyrusContentProvider"
            android:authorities="${applicationId}.provider.PapyrusContentProvider"
            android:exported="false" />

        <receiver android:name=".util.AlarmReceiver" />
    </application>

</manifest>