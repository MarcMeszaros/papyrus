<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.marcmeszaros.papyrus">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:name="Papyrus">

        <activity
            android:name=".Settings"
            android:label="@string/Settings_title" />

        <activity
            android:name=".browser.BookDetails"
            android:label="@string/BookDetails_title" />

        <activity
            android:name=".browser.TabBrowser"
            android:theme="@android:style/Theme.NoTitleBar" />

        <activity
            android:name=".browser.BooksBrowser"
            android:label="@string/BooksBrowser_title" />

        <activity
            android:name=".browser.LibrariesBrowser"
            android:label="@string/LibrariesBrowser_title" />

        <activity
            android:name=".browser.LoanDetails"
            android:label="@string/LoanDetails_title" />

        <activity
            android:name=".browser.LoansBrowser"
            android:label="@string/LoansBrowser_title" />

        <activity
            android:name=".database.AddBook"
            android:label="@string/AddBook_title" />

        <activity
            android:name=".database.AddLibrary"
            android:label="@string/AddLibrary_title" />

        <!-- Activity Aliases -->
        <activity-alias
            android:name=".activities.MainActivity"
            android:targetActivity=".browser.TabBrowser">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <!-- Content Providers -->
        <provider
            android:name=".provider.PapyrusContentProvider"
            android:authorities="ca.marcmeszaros.papyrus.provider.PapyrusContentProvider"
            android:exported="false" />

        <receiver android:name=".AlarmReceiver" />
    </application>

</manifest>